OPENAI_API_KEY=
COINGECKO_API_KEY=

# VS currency for pricing features
VS_CURRENCY=usd

# Where to write logs (newline-delimited JSON)
LOG_DIR=./logs

# Whether to run a prediction immediately on start (can also pass --run-now)
RUN_ON_START=false

# Paris rebalance time (cron will use Europe/Paris timezone)
# Runs daily at 12:00
CRON_EXPR=0 12 * * *

# If true, also include BTC conditioning features when predicting alts
INCLUDE_BTC_REGIME=true

# --- ChainSignals (Kasplex) ---
CHAIN_ID=202555
CHAIN_NAME=Kasplex L2
CHAIN_RPC_URL=https://evmrpc.kasplex.org
CHAIN_SIGNALS_ADDRESS=0x0d6a6328130d9794c35482aF225099D8173F9b84

# Hard timeout for the whole on-chain send (ms)
CHAIN_SEND_TIMEOUT_MS=120000

# Wait for receipt (true = mined / false = broadcast only)
CHAIN_WAIT_RECEIPT=true

CHAIN_TX_TYPE=auto

# Private key for posting signals
DEPLOYER_PK=

# If true, allow posting signals during manual "--run-now" runs (testing)
SEND_RUN_NOW_TO_CHAIN=false

CHAIN_RPC_DEBUG=false

DEBUG_SIGNALS_FEEDBACK=false
N_SIGNALS_FEEDBACK=5
